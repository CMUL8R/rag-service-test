# -----------------------------
# FastAPI / Logging
# -----------------------------
LOG_LEVEL=INFO

# -----------------------------
# Database (по умолчанию Compose поднимает Postgres)
# Для локального старта можно использовать SQLite: sqlite:///./rag.db
# -----------------------------
DATABASE_URL=postgresql://raguser:ragpassword@postgres:5432/ragdb

# -----------------------------
# Redis cache
# -----------------------------
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# -----------------------------
# Vector storage (Qdrant)
# -----------------------------
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# -----------------------------
# Embeddings / Chunking
# -----------------------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# -----------------------------
# LLM settings
# -----------------------------
LLM_PROVIDER=anthropic
MAX_TOKENS=750
TEMPERATURE=0.1
ANTHROPIC_API_KEY=replace_me
OPENAI_API_KEY=replace_me

# -----------------------------
# Optional: альтернативные ключи, если используете OpenAI
# LLM_PROVIDER=openai
# -----------------------------
